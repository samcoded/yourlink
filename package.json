{
  "name": "yourlink",
  "version": "1.0.0",
  "description": "Url shortener",
  "main": "server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "build_fe": "npm i --prefix && npm run build --prefix client",
    "build_be": "npx tsc",
    "server": "nodemon src/server.ts",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run build_fe && npm run build_be",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess 'node ./dist/server.js'"
  },
  "repository": "git@github.com:samcoded/yourlink.git",
  "author": "Samuel Anozie",
  "license": "ISC",
  "engines": {
    "node": "v16.14.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "ip": "^2.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.2",
    "node-iplocate": "^1.0.3",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.11.18",
    "ts-node": "^10.9.1",
    "tsc-watch": "^4.2.9"
  }
}
